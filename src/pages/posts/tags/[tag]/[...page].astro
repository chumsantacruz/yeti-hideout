---
import type { GetStaticPaths } from "astro";
import { getAllPosts } from "../../../../utils/getAllPosts";
import Layout from "../../../../layouts/Layout.astro";
import ArticleCard from "../../../../components/ArticleCard.astro";

export const getStaticPaths = (async({paginate}) => {
  const posts = await getAllPosts()
  const uniqueTags = [...new Set(posts.map(post => post.data.tag).flat())]
  return uniqueTags.flatMap((tag) => {
    const filteredPosts = posts.filter(post => post.data.tag.includes(tag))
    return paginate(filteredPosts, {
      params: {tag},
      pageSize: 20
    })
  })
}) satisfies GetStaticPaths;

const {page} = Astro.props
const params = Astro.params
---

<Layout title={params.tag}>
  <div class="grid gap-3">
    {
      page.data.map((post) => (
      <ArticleCard post={post}/>
      ))
    }
  </div>
  <div class="grid grid-cols-2 mt-3">
    {
      page.url.prev ? (
        <a class="" href={page.url.prev}>
          Previous
        </a>
      ) : null
    }
    {
      page.url.next ? (
        <a class="col-start-2 col-end-3 justify-self-end" href={page.url.next}>
          Next
        </a>
      ) : null
    }
  </div>
</Layout>