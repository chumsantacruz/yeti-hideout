---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import YetiLogo from "../images/yeti.png";
---

<Layout title="Yeti's Planet" h1={false}>
  <div class="grid place-items-center gap-5">
    <h1 class="font-bold text-5xl">
      <span class="text-3xl font-normal">Welcome to...</span>
      <br class="md:hidden">
      Yeti's
      <br class="md:hidden"/>
      Planet
