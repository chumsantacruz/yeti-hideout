---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const posts = await getCollection('posts')
---

<Layout title="posts">
  <ol class="list-decimal list-inside">
    {posts.map(post => (
      <li><a href={`/posts/${post.slug}/`}>{post.data.title}</a></li>
    ))}
  </ol>
</Layout>