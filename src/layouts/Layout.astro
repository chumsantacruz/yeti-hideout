---
import { ViewTransitions } from "astro:transitions";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import CameraTags from "../components/CameraTags.astro";
import PostTags from "../components/PostTags.astro";
import SideNav from "../components/SideNav.astro";
interface Props {
  title: string;
  h1?: boolean;
}

const { title, h1 = true } = Astro.props;
---

<!doctype html>
<html lang="ja" class="font-sans text-[15px] overflow-x-hidden">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="bg-gray-100 min-h-lvh grid grid-rows-layout">
    <Header transition:persist />
    <main class="container w-svw mx-auto px-5 py-8 md:flex gap-6 items-start">
      <div class="hidden shrink-0 w-64 sticky top-24 md:block">
        <div class="grid auto-rows-max gap-4">
          <SideNav />
          {
            Astro.url.pathname.startsWith("/photos") ? (
              <CameraTags />
            ) : (
              <PostTags />
            )
          }
        </div>
      </div>
      <div class="grow">
        {h1 ? <h1 class="mb-3 text-3xl">{title}</h1> : null}
        <slot />
      </div>
    </main>
    <Footer />
  </body>
</html>
