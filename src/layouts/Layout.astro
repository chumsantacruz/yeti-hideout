---
import { ViewTransitions } from "astro:transitions";
import Header from "../components/astro/Header.astro";
import Footer from "../components/astro/Footer.astro";
import SideNav from "../components/astro/SideNav.astro";
import "../styles/global.css";
interface Props {
  title: string;
  h1?: boolean;
}

const url = decodeURI(Astro.url.pathname);

const { title, h1 = true } = Astro.props;
---

<!doctype html>
<html
  lang="ja"
  class="font-sans text-[15px] overflow-x-hidden"
  data-theme="github-light"
>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Astro description" />
    <meta name="og:type" content="website" />
    <meta name="og:title" content={title} />
    <meta name="og:url" content={`https://www.chumsantacruz.com${url}`} />
    <meta name="og:description" content="" />
    <meta name="og:image" content="chumsatacruzの個人ブログ" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="bg-background text-foreground min-h-lvh grid grid-rows-layout">
    <Header transition:persist />
    <main class="container mx-auto px-5 py-8 md:flex gap-6 items-start">
      <nav class="hidden shrink-0 w-64 sticky top-24 md:block">
        <SideNav />
      </nav>
      <div class="w-full">
        {h1 ? <h1 class="mb-3 text-3xl">{title}</h1> : null}
        <slot />
      </div>
    </main>
    <Footer />
  </body>
</html>
